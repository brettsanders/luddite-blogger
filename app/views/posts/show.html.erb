<h1><%= @post.title %></h1>

<%= @post.text %>

<!-- <h2>Comments</h2> -->


  <p id="links">
  <% if current_user == @post.user %>
    <%= link_to "Back", user_slug_path(current_user) %>
    |
    <%= link_to "Edit", user_edit_post_path(current_user, @post) %>
    |
    <%= link_to "Delete", user_post_path, :method => :delete, 
                                          :confirm => "Are you sure?" %>

  <% end %>
  </p>
